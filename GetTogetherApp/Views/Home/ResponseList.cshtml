@model IEnumerable<GetTogetherApp.Models.ResponseModel>

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="section-title">RVSP FORM</h2>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-10 offset-lg-2">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetTogetherApp.Models.ResponseModel m in Model)
                        {
                            <tr>
                                <th scope="row">1</th>
                                <td>@m.Name</td>
                                <td>@m.Email</td>
                                <td>@m.Phone</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</section>